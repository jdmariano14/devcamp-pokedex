<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pokemon.name %>
</p>

<% if @pokemon.evolves_from %>
  <strong>Evolves From:</strong><br>
  <%= @pokemon.evolves_from.name %>
<% end %>

<p>
  <strong>Type:</strong>
  <%= @pokemon.type_id %>
</p>

<% if @pokemon.image %>
  <strong>Image:</strong><br>
  <%= image_tag @pokemon.image.url(:medium) %>
<% end %>


<% if @pokemon.moves.count > 0 %>
  <p><strong>Moves:</strong></p>
  <ol>
  <% @pokemon.moves.each do |move| %>
    <li><%= move.name %></li>
  <% end %>
  </ol>
<% end %>

<p><strong>Weaknesses:</strong>
<% if @pokemon.weaknesses.count > 0 %>
  </p>
  <ul>
  <% @pokemon.weaknesses.each do |weakness| %>
    <li><%= weakness.type.name %></li>
  <% end %>
  </ul>
<% else %>
  <br>None</p>
<% end %>

<%= link_to 'Edit', edit_pokemon_path(@pokemon) %> |
<% if @pokemon.evolves_from %>
<%= link_to 'Show Prior', @pokemon.evolves_from %> |
<% end %>
<%= link_to 'Add Evolution', evolve_pokemon_path(@pokemon) %> |
<%= link_to 'Back', pokemons_path %>